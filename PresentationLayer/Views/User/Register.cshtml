
@model DomainLayer.ViewModels.UserVIewmodels.RegisterView

<div class="row mb-1">  
    <div class="col-6">
        <h5>Create User</h5>
    </div>
</div>

<div class="row">
    <div class="card shadow p-lg-3 pd-md-3 pd-sm-3">
        <div class="card-body">
            <div class="row mb-2">
                <form id="registerForm" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger errorMgs"></div>
                    <div class="row">
                        <div class="form-group col-md-4 my-2">
                            <label class="form-label" asp-for="FullName">Full Name <span class="text-danger">*</span></label>
                            <input asp-for="FullName" class="form-control form-control-sm" placeholder="Full Name" autocomplete="off" aria-required="true" />
                            <span asp-validation-for="FullName" class="text-danger errorMgs"></span>
                        </div>
                        <div class="form-group col-md-4 my-2">
                            <label class="form-label" asp-for="Email">Email <span class="text-danger">*</span></label>
                            <input asp-for="Email" class="form-control form-control-sm" placeholder="Email" autocomplete="off" aria-required="true" />
                            <span asp-validation-for="Email" class="text-danger errorMgs"></span>
                        </div>
                        <div class="form-group col-md-4 my-2">
                            <label class="form-label" asp-for="ConfirmEmail">Confirm Email</label>
                            <input asp-for="ConfirmEmail" class="form-control form-control-sm" placeholder="Confirm Email" autocomplete="off" />
                            <span asp-validation-for="ConfirmEmail" class="text-danger errorMgs"></span>
                        </div>
                        <div class="form-group col-md-4 my-2">
                            <label class="form-label" asp-for="Password">Password <span class="text-danger">*</span></label>
                            <input asp-for="Password" class="form-control form-control-sm" placeholder="Password" autocomplete="off" aria-required="true" />
                            <span asp-validation-for="Password" class="text-danger errorMgs"></span>
                        </div>
                        <div class="form-group col-md-4 my-2">
                            <label class="form-label" asp-for="PhoneNumber">Phone Number <span class="text-danger">*</span></label>
                            <input asp-for="PhoneNumber" class="form-control form-control-sm" placeholder="Phone Number" autocomplete="off" aria-required="true" />
                            <span asp-validation-for="PhoneNumber" class="text-danger errorMgs"></span>
                        </div>
                        <div class="form-group col-md-4 my-2">
                            <label class="form-label" asp-for="ProfilePictureUrl">Profile Picture</label>
                            <input asp-for="ProfilePictureUrl" type="file" class="form-control form-control-sm" aria-required="true" />
                            <span asp-validation-for="ProfilePictureUrl" class="text-danger errorMgs"></span>
                        </div>
                        <div class="form-group col-md-4 my-2">
                            <label class="form-label" asp-for="DateOfBirth">Date of Birth <span class="text-danger">*</span></label>
                            <input asp-for="DateOfBirth" type="date" class="form-control form-control-sm" aria-required="true" />
                            <span asp-validation-for="DateOfBirth" class="text-danger errorMgs"></span>
                        </div>
                        <div class="form-group col-md-4 my-2">
                            <label class="form-label" asp-for="Gender">Gender <span class="text-danger">*</span></label>
                            <select asp-for="Gender" class="form-control form-control-sm" aria-required="true">
                                <option value="">-Select Gender-</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger errorMgs"></span>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="form-group d-flex justify-content-end me-md-5 mt-4">
                            <button id="registerUser" type="submit" class="btn btn-primary">Create</button>
                            <button id="clearUserForm" type="reset" class="btn btn-secondary ms-1">Clear</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
